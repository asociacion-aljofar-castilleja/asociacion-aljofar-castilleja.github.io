---
import Header from "../Header/Header.astro";
import Footer from "../Footer/Footer.astro";
import { getEntry } from "astro:content";

// SCSS global
import "@styles/main.scss";

// URL del bundle JS (dev y build)
import appUrl from "@scripts/app.entry.js?url";

type Lang = "es" | "en";
interface Props { lang?: Lang; title?: string; description?: string; otherHref?: string; }

const {
  lang = "es",
  title = "Proyecto Web Solidario",
  description = "Plantilla Astro + Bootstrap + Sass",
  otherHref,
} = Astro.props as Props;

const compIdMap = { es: "baselayout/es", en: "baselayout/en" } as const;
type CompId = typeof compIdMap[Lang];
interface LayoutI18n { skipToContent?: string; }

const entry = await getEntry({ collection: "ui", id: compIdMap[lang] as CompId });
const I = (entry?.data ?? {}) as LayoutI18n;
const skipText = I.skipToContent ?? (lang === "en" ? "Skip to content" : "Saltar al contenido");
---
<!DOCTYPE html>
<html lang={lang} data-bs-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
  </head>
  <body>
    <a class="visually-hidden-focusable" href="#main-content">{skipText}</a>

    <Header lang={lang} otherHref={otherHref} />

    <main id="main-content" class="py-4">
      <slot />
    </main>

    <Footer lang={lang} />

    <!-- Igual en dev y build: Vite resuelve app.entry.js a un asset vÃ¡lido -->
    <script type="module" src={appUrl}></script>
  </body>
</html>
