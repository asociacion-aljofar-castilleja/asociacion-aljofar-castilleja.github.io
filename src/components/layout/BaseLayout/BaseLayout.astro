---
import Header from "../Header/Header.astro";
import Footer from "../Footer/Footer.astro";
import { getEntry } from "astro:content";

// ⬇️ IMPORTA los assets de /src como URL compilada
import mainCssUrl from "../../styles/main.scss?url";
import appJsUrl from "../../scripts/app.ts?url"; // compila TS y te da la URL final

type Lang = "es" | "en";
interface Props {
  lang?: Lang;
  title?: string;
  description?: string;
  otherHref?: string;
}

const {
  lang = "es",
  title = "Proyecto Web Solidario",
  description = "Plantilla Astro + Bootstrap + Sass",
  otherHref,
} = Astro.props as Props;

const compIdMap = { es: "baselayout/es", en: "baselayout/en" } as const;
type CompId = typeof compIdMap[Lang];

interface LayoutI18n {
  skipToContent?: string;
}

const entry = await getEntry({
  collection: "ui",
  id: compIdMap[lang] as CompId,
});
const I = (entry?.data ?? {}) as LayoutI18n;

const skipText = I.skipToContent ?? (lang === "en" ? "Skip to content" : "Saltar al contenido");
---
<!DOCTYPE html>
<html lang={lang} data-bs-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Usa el favicon real que tienes en /public -->
    <link rel="icon" href="/favicon.svg" />

    <!-- Opcional: Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- ✅ CSS compilado por Astro/Vite -->
    <link rel="stylesheet" href={mainCssUrl} />
  </head>
  <body>
    <a class="visually-hidden-focusable" href="#main-content">{skipText}</a>

    <Header lang={lang} otherHref={otherHref} />

    <main id="main-content" class="py-4">
      <slot />
    </main>

    <Footer lang={lang} />

    <!-- ✅ JS compilado por Astro/Vite -->
    <script type="module" src={appJsUrl}></script>
  </body>
</html>
