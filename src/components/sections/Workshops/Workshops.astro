---
import WorkshopCard from "./WorkshopCard.astro";

// idioma
const lang: "es" | "en" = "es";

// array de workshops directamente
const workshops = [
  {
    titulo: "Aula Matinal",
    descripcion: "Actividad formativa que refuerza lectura, escritura, cálculo y memoria. Fomenta la autonomía y el aprendizaje básico.",
    horario_lugar: "De octubre a junio, lunes a viernes, de 10:00 a 13:00 h. Centro Cívico de Nueva Sevilla. Modalidad presencial.",
    imagenes: [
      { src: "/images/aula-matinal.jpg", alt: "Socios participando en el aula matinal" }
    ]
  },
  {
    titulo: "Taller de Manualidades",
    descripcion: "Fomenta la creatividad y habilidades psicomotrices mediante la elaboración de objetos útiles y decorativos.",
    horario_lugar: "Durante todo el año en el Centro Cívico de Nueva Sevilla. Modalidad presencial.",
    imagenes: [
      { src: "/images/workshop/taller-de-manualidades-cuencos.jpg", alt: "Socios creando cuencos" },
      { src: "/images/workshop/taller-de-manualidades-abanicos.jpg", alt: "Socios creando abanicos" },
      { src: "/images/workshop/taller-de-manualidades-fundas.jpg", alt: "Socios creando fundas" },
      { src: "/images/workshop/taller-de-manualidades-camisetas.jpg", alt: "Socios pintando camisetas" },
      { src: "/images/workshop/taller-de-manualidades-llaveros.jpg", alt: "Socios creando llaveros" },
      { src: "/images/workshop/taller-de-manualidades-cuadros.jpg", alt: "Socios pintando cuadros" },
      { src: "/images/workshop/taller-de-manualidades-tazas.jpg", alt: "Socios decorando tazas" }
    ]
  },
  {
    titulo: "Taller de Informática",
    descripcion: "Iniciación a la informática: uso básico del ordenador, procesadores de texto y navegación segura por internet.",
    horario_lugar: "Durante el curso en el Centro Cívico de Nueva Sevilla. Modalidad presencial, 3 equipos disponibles.",
    imagenes: [
      { src: "/images/workshop/taller-de-informatica.jpg", alt: "Socios aprendiendo informática" }
    ]
  },
  {
    titulo: "Taller de Baile",
    descripcion: "Actividad física y recreativa que promueve coordinación, ritmo y socialización mediante distintos estilos de baile.",
    horario_lugar: "Durante el curso en el Centro Cívico de Nueva Sevilla. Modalidad presencial.",
    imagenes: [
      { src: "/images/baile.jpg", alt: "Socios bailando en el taller de baile" }
    ]
  }
];
---
<section class="whatwedo-workshops py-3" aria-label="Talleres y Actividades" data-module="Workshops">
  <div class="container">
    <h2 class="h4 mb-3">Talleres y Actividades</h2>

    {workshops.length === 0 ? (
      <p class="text-muted">Aún no hay talleres.</p>
    ) : (
      <div class="row row-cols-1 row-cols-md-2 g-4">
        {workshops.map((w, idx) => (
          <div class="col d-flex">
            <WorkshopCard lang={lang} w={w} idBase={`workshop-${idx}`} />
          </div>
        ))}
      </div>
    )}
  </div>
</section>
